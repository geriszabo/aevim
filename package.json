{
  "name": "aevim",
  "version": "1.0.0",
  "description": "Aevim fullstack application monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\" \"sleep 3 && open http://localhost:3000 && open http://localhost:4000\"",
    "dev:backend": "cd apps/backend && bun run dev",
    "dev:frontend": "cd apps/frontend && bun run dev",
    "start:backend": "cd apps/backend && bun run start",
    "start:frontend": "cd apps/frontend && bun run start",
    "test": "bun run test:backend && bun run test:frontend",
    "test:backend": "cd apps/backend && bun test",
    "test:frontend": "cd apps/frontend && bun test",
    "coverage:backend": "cd apps/backend && bun test --coverage",
    "build": "bun run build:shared && bun run build:backend && bun run build:frontend",
    "build:shared": "cd packages/shared-types && bun run build",
    "build:backend": "cd apps/backend && bun run build",
    "build:frontend": "cd apps/frontend && bun run build",
    "rebuild": "cd packages/shared-types && bun run build && cd ../.. && bun install",
    "db:users:reset": "cd apps/backend && bun run db:users:reset",
    "db:workouts:reset": "cd apps/backend && bun run db:workouts:reset",
    "db:we:reset": "cd apps/backend && bun run db:we:reset",
    "db:exercises:reset": "cd apps/backend && bun run db:exercises:reset",
    "db:sets:reset": "cd apps/backend && bun run db:sets:reset",
    "lint:backend": "cd apps/backend && bun run lint",
    "lint:frontend": "cd apps/frontend && bun run lint",
    "lint": "bun run lint:backend && bun run lint:frontend",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bun run format && git add -A .",
      "pre-push": "bun run test"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "prettier": "3.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/geriszabo/aevim.git"
  },
  "author": "Gergo Szabo",
  "license": "MIT",
  "dependencies": {
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "**/*.{js,jsx,html,css,ts,tsx,json}": "prettier --write"
  }
}
